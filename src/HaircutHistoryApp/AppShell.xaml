<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="HaircutHistoryApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:HaircutHistoryApp.Views"
    Title="HairCut History"
    Shell.FlyoutBehavior="Disabled"
    Shell.BackgroundColor="{StaticResource Primary}"
    Shell.ForegroundColor="White"
    Shell.TitleColor="White">

    <!-- Login Flow -->
    <ShellContent
        Route="login"
        ContentTemplate="{DataTemplate views:LoginPage}"/>

    <!-- Register Page (navigated to from login) -->

    <!-- Main Router (redirects based on user mode) -->
    <ShellContent
        Route="main"
        ContentTemplate="{DataTemplate views:MainPage}"/>

    <!-- Client Dashboard -->
    <ShellContent
        Route="clientDashboard"
        ContentTemplate="{DataTemplate views:ProfileListPage}"/>

    <!-- Barber Dashboard -->
    <ShellContent
        Route="barberDashboard"
        ContentTemplate="{DataTemplate views:BarberDashboardPage}"/>

</Shell>
