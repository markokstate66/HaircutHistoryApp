<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:HaircutHistoryApp.ViewModels"
             xmlns:models="clr-namespace:HaircutHistoryApp.Models"
             x:Class="HaircutHistoryApp.Views.ProfileListPage"
             x:DataType="vm:ProfileListViewModel"
             Title="{Binding Title}"
             BackgroundColor="{AppThemeBinding Light={StaticResource BackgroundLight}, Dark={StaticResource BackgroundDark}}">


    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Upgrade Banner for Free Users -->
        <Frame Grid.Row="0"
               Padding="10"
               Margin="15,10,15,0"
               BackgroundColor="{StaticResource Primary}"
               BorderColor="Transparent"
               CornerRadius="8"
               IsVisible="{Binding ShowUpgradeBanner}">
            <Frame.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding GoToPremiumCommand}"/>
            </Frame.GestureRecognizers>
            <Grid ColumnDefinitions="*,Auto">
                <VerticalStackLayout>
                    <Label Text="Upgrade to Premium"
                           FontSize="14"
                           FontAttributes="Bold"
                           TextColor="White"/>
                    <Label Text="{Binding RemainingProfiles, StringFormat='{0} profiles remaining'}"
                           FontSize="11"
                           TextColor="White"
                           Opacity="0.9"/>
                </VerticalStackLayout>
                <Label Grid.Column="1"
                       Text=">"
                       FontSize="20"
                       TextColor="White"
                       VerticalOptions="Center"/>
            </Grid>
        </Frame>

        <!-- Empty State -->
        <VerticalStackLayout Grid.Row="1"
                           IsVisible="{Binding IsEmpty}"
                           VerticalOptions="Center"
                           HorizontalOptions="Center"
                           Spacing="20"
                           Padding="30">
            <Label Text="S" FontSize="80" HorizontalOptions="Center" TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}"/>
            <Label Text="No Haircuts Yet"
                   FontSize="22"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}"/>
            <Label Text="Add your first haircut profile to remember your perfect cut!"
                   FontSize="14"
                   TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"/>
            <Button Text="Add Haircut Profile"
                    Command="{Binding AddProfileCommand}"
                    Style="{StaticResource PrimaryButton}"
                    WidthRequest="200"/>
        </VerticalStackLayout>

        <!-- Profile List -->
        <RefreshView Grid.Row="1"
                    IsRefreshing="{Binding IsRefreshing}"
                    Command="{Binding RefreshCommand}"
                    IsVisible="{Binding IsEmpty, Converter={StaticResource InvertedBoolConverter}}">
            <CollectionView ItemsSource="{Binding Profiles}"
                          SelectionMode="None"
                          Margin="15">
                <CollectionView.Header>
                    <!-- Global Stats Card -->
                    <Frame Padding="15"
                           Margin="0,0,0,15"
                           BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceLight}, Dark={StaticResource SurfaceDark}}"
                           BorderColor="Transparent"
                           CornerRadius="12"
                           IsVisible="{Binding HasGlobalStats}">
                        <Grid ColumnDefinitions="*,*,*,*" ColumnSpacing="10">
                            <!-- Days Since -->
                            <VerticalStackLayout Grid.Column="0" Spacing="2" HorizontalOptions="Center">
                                <Label Text="{Binding GlobalDaysSinceDisplay}"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="{StaticResource Primary}"
                                       HorizontalOptions="Center"/>
                                <Label Text="Last Cut"
                                       FontSize="10"
                                       TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}"
                                       HorizontalOptions="Center"/>
                            </VerticalStackLayout>

                            <!-- This Year Cuts -->
                            <VerticalStackLayout Grid.Column="1" Spacing="2" HorizontalOptions="Center">
                                <Label Text="{Binding TotalHaircutsThisYear}"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="{StaticResource Primary}"
                                       HorizontalOptions="Center"/>
                                <Label Text="This Year"
                                       FontSize="10"
                                       TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}"
                                       HorizontalOptions="Center"/>
                            </VerticalStackLayout>

                            <!-- 90 Day Spend -->
                            <VerticalStackLayout Grid.Column="2" Spacing="2" HorizontalOptions="Center">
                                <Label Text="{Binding SpentPast90Days, StringFormat='${0:F0}'}"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="{StaticResource Secondary}"
                                       HorizontalOptions="Center"/>
                                <Label Text="90 Days"
                                       FontSize="10"
                                       TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}"
                                       HorizontalOptions="Center"/>
                            </VerticalStackLayout>

                            <!-- Year Spend -->
                            <VerticalStackLayout Grid.Column="3" Spacing="2" HorizontalOptions="Center">
                                <Label Text="{Binding SpentThisYear, StringFormat='${0:F0}'}"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="{StaticResource Secondary}"
                                       HorizontalOptions="Center"/>
                                <Label Text="YTD"
                                       FontSize="10"
                                       TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}"
                                       HorizontalOptions="Center"/>
                            </VerticalStackLayout>
                        </Grid>
                    </Frame>
                </CollectionView.Header>
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="15"/>
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Profile">
                        <Frame Padding="15"
                               BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceLight}, Dark={StaticResource SurfaceDark}}"
                               BorderColor="Transparent"
                               CornerRadius="12"
                               HasShadow="True">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:ProfileListViewModel}}, Path=ViewProfileCommand}"
                                                    CommandParameter="{Binding .}"/>
                            </Frame.GestureRecognizers>
                            <Grid ColumnDefinitions="60,*,Auto" RowDefinitions="Auto,Auto,Auto" ColumnSpacing="12">
                                <!-- Avatar -->
                                <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="2"
                                        StrokeShape="RoundRectangle 30"
                                        Stroke="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray700}}"
                                        BackgroundColor="{StaticResource Primary}"
                                        WidthRequest="60"
                                        HeightRequest="60"
                                        VerticalOptions="Start">
                                    <Grid>
                                        <Image Source="{Binding AvatarUrl}"
                                               Aspect="AspectFill"
                                               IsVisible="{Binding AvatarUrl, Converter={StaticResource StringToBoolConverter}}"/>
                                        <Label Text="{Binding Initials}"
                                               FontSize="20"
                                               FontAttributes="Bold"
                                               HorizontalOptions="Center"
                                               VerticalOptions="Center"
                                               TextColor="White"
                                               IsVisible="{Binding AvatarUrl, Converter={StaticResource StringToBoolConverter}, ConverterParameter=invert}"/>
                                    </Grid>
                                </Border>

                                <!-- Profile Name -->
                                <VerticalStackLayout Grid.Row="0" Grid.Column="1">
                                    <Label Text="{Binding Name}"
                                           FontSize="18"
                                           FontAttributes="Bold"
                                           TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}"/>
                                </VerticalStackLayout>

                                <!-- Haircut Count -->
                                <Label Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2"
                                       Text="{Binding HaircutCountDisplay}"
                                       FontSize="14"
                                       TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}"
                                       Margin="0,5,0,0"/>

                                <!-- Action Buttons -->
                                <HorizontalStackLayout Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3"
                                                      Spacing="10" Margin="0,15,0,0">
                                    <Button Text="Share"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type vm:ProfileListViewModel}}, Path=ShareProfileCommand}"
                                            CommandParameter="{Binding .}"
                                            Style="{StaticResource SecondaryButton}"
                                            HeightRequest="36"
                                            FontSize="12"/>
                                    <Button Text="Delete"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type vm:ProfileListViewModel}}, Path=DeleteProfileCommand}"
                                            CommandParameter="{Binding .}"
                                            Style="{StaticResource DangerButton}"
                                            HeightRequest="36"
                                            FontSize="12"/>
                                </HorizontalStackLayout>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>

        <!-- FAB -->
        <Button Grid.Row="1"
                Text="+"
                Command="{Binding AddProfileCommand}"
                IsVisible="{Binding IsEmpty, Converter={StaticResource InvertedBoolConverter}}"
                WidthRequest="60"
                HeightRequest="60"
                CornerRadius="30"
                FontSize="30"
                BackgroundColor="{StaticResource Primary}"
                TextColor="White"
                HorizontalOptions="End"
                VerticalOptions="End"
                Margin="20"/>

        <!-- Loading -->
        <ActivityIndicator Grid.Row="1"
                         IsRunning="{Binding IsBusy}"
                         IsVisible="{Binding IsBusy}"
                         Color="{StaticResource Primary}"
                         VerticalOptions="Center"
                         HorizontalOptions="Center"/>

        <!-- Ad Banner (for free users - mobile only) -->
        <ContentView x:Name="AdBannerContainer"
                     Grid.Row="2"
                     HeightRequest="50"
                     IsVisible="{Binding ShowAds}"/>
    </Grid>
</ContentPage>
