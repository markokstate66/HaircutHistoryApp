<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:HaircutHistoryApp.ViewModels"
             xmlns:models="clr-namespace:HaircutHistoryApp.Models"
             x:Class="HaircutHistoryApp.Views.ProfileListPage"
             x:DataType="vm:ProfileListViewModel"
             Title="{Binding Title}"
             BackgroundColor="{StaticResource Background}">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Settings" Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.GoToSettingsCommand}" IconImageSource="settings.png"/>
    </ContentPage.ToolbarItems>

    <Grid>
        <!-- Empty State -->
        <VerticalStackLayout IsVisible="{Binding IsEmpty}"
                           VerticalOptions="Center"
                           HorizontalOptions="Center"
                           Spacing="20"
                           Padding="30">
            <Label Text="✂️" FontSize="80" HorizontalOptions="Center"/>
            <Label Text="No Haircuts Yet"
                   FontSize="22"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>
            <Label Text="Add your first haircut profile to remember your perfect cut!"
                   FontSize="14"
                   TextColor="{StaticResource Gray500}"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"/>
            <Button Text="Add Haircut Profile"
                    Command="{Binding AddProfileCommand}"
                    Style="{StaticResource PrimaryButton}"
                    WidthRequest="200"/>
        </VerticalStackLayout>

        <!-- Profile List -->
        <RefreshView IsRefreshing="{Binding IsRefreshing}"
                    Command="{Binding RefreshCommand}"
                    IsVisible="{Binding IsEmpty, Converter={StaticResource InvertedBoolConverter}}">
            <CollectionView ItemsSource="{Binding Profiles}"
                          SelectionMode="None"
                          Margin="15">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="15"/>
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:HaircutProfile">
                        <Frame Padding="15"
                               BackgroundColor="{StaticResource Surface}"
                               BorderColor="Transparent"
                               CornerRadius="12"
                               HasShadow="True">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:ProfileListViewModel}}, Path=ViewProfileCommand}"
                                                    CommandParameter="{Binding .}"/>
                            </Frame.GestureRecognizers>
                            <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto">
                                <!-- Profile Name -->
                                <Label Grid.Row="0" Grid.Column="0"
                                       Text="{Binding Name}"
                                       FontSize="18"
                                       FontAttributes="Bold"/>

                                <!-- Favorite Indicator -->
                                <Label Grid.Row="0" Grid.Column="1"
                                       Text="⭐"
                                       IsVisible="{Binding IsFavorite}"
                                       FontSize="16"/>

                                <!-- Summary -->
                                <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                       Text="{Binding DisplaySummary}"
                                       FontSize="14"
                                       TextColor="{StaticResource Gray500}"
                                       Margin="0,5,0,0"/>

                                <!-- Action Buttons -->
                                <HorizontalStackLayout Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                                                      Spacing="10" Margin="0,15,0,0">
                                    <Button Text="Share"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type vm:ProfileListViewModel}}, Path=ShareProfileCommand}"
                                            CommandParameter="{Binding .}"
                                            Style="{StaticResource SecondaryButton}"
                                            HeightRequest="36"
                                            FontSize="12"/>
                                    <Button Text="Delete"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type vm:ProfileListViewModel}}, Path=DeleteProfileCommand}"
                                            CommandParameter="{Binding .}"
                                            Style="{StaticResource DangerButton}"
                                            HeightRequest="36"
                                            FontSize="12"/>
                                </HorizontalStackLayout>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>

        <!-- FAB -->
        <Button Text="+"
                Command="{Binding AddProfileCommand}"
                IsVisible="{Binding IsEmpty, Converter={StaticResource InvertedBoolConverter}}"
                WidthRequest="60"
                HeightRequest="60"
                CornerRadius="30"
                FontSize="30"
                BackgroundColor="{StaticResource Primary}"
                TextColor="White"
                HorizontalOptions="End"
                VerticalOptions="End"
                Margin="20"/>

        <!-- Loading -->
        <ActivityIndicator IsRunning="{Binding IsBusy}"
                         IsVisible="{Binding IsBusy}"
                         Color="{StaticResource Primary}"
                         VerticalOptions="Center"
                         HorizontalOptions="Center"/>
    </Grid>
</ContentPage>
