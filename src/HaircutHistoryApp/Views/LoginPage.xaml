<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:HaircutHistoryApp.ViewModels"
             x:Class="HaircutHistoryApp.Views.LoginPage"
             x:DataType="vm:LoginViewModel"
             Shell.NavBarIsVisible="False"
             BackgroundColor="{StaticResource Background}">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="Center">

            <!-- Logo/Title -->
            <VerticalStackLayout Spacing="10" Margin="0,0,0,30">
                <Label Text="✂️"
                       FontSize="60"
                       HorizontalOptions="Center"/>
                <Label Text="HairCut History"
                       FontSize="28"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       TextColor="{StaticResource Primary}"/>
                <Label Text="Remember your perfect cut"
                       FontSize="14"
                       HorizontalOptions="Center"
                       TextColor="{StaticResource Gray500}"/>
            </VerticalStackLayout>

            <!-- Email Entry -->
            <VerticalStackLayout Spacing="5">
                <Label Text="Email" FontSize="14" TextColor="{StaticResource Gray600}"/>
                <Entry Placeholder="Enter your email"
                       Text="{Binding Email}"
                       Keyboard="Email"
                       ReturnType="Next"
                       Style="{StaticResource EntryStyle}"/>
            </VerticalStackLayout>

            <!-- Password Entry -->
            <VerticalStackLayout Spacing="5">
                <Label Text="Password" FontSize="14" TextColor="{StaticResource Gray600}"/>
                <Entry Placeholder="Enter your password"
                       Text="{Binding Password}"
                       IsPassword="True"
                       ReturnType="Done"
                       ReturnCommand="{Binding SignInCommand}"
                       Style="{StaticResource EntryStyle}"/>
            </VerticalStackLayout>

            <!-- Sign In Button -->
            <Button Text="Sign In"
                    Command="{Binding SignInCommand}"
                    IsEnabled="{Binding IsNotBusy}"
                    Style="{StaticResource PrimaryButton}"
                    Margin="0,20,0,0"/>

            <!-- Loading Indicator -->
            <ActivityIndicator IsRunning="{Binding IsBusy}"
                             IsVisible="{Binding IsBusy}"
                             Color="{StaticResource Primary}"/>

            <!-- Register Link -->
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="5" Margin="0,20,0,0">
                <Label Text="Don't have an account?"
                       VerticalOptions="Center"
                       TextColor="{StaticResource Gray500}"/>
                <Label Text="Sign Up"
                       TextColor="{StaticResource Primary}"
                       FontAttributes="Bold"
                       VerticalOptions="Center">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding GoToRegisterCommand}"/>
                    </Label.GestureRecognizers>
                </Label>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
