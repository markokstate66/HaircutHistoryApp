<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:HaircutHistoryApp.ViewModels"
             xmlns:models="clr-namespace:HaircutHistoryApp.Models"
             x:Class="HaircutHistoryApp.Views.BarberDashboardPage"
             x:DataType="vm:BarberDashboardViewModel"
             Title="{Binding Title}"
             BackgroundColor="{AppThemeBinding Light={StaticResource BackgroundLight}, Dark={StaticResource BackgroundDark}}">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Settings" Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.GoToSettingsCommand}" IconImageSource="settings.png"/>
    </ContentPage.ToolbarItems>

    <RefreshView IsRefreshing="{Binding IsRefreshing}"
                Command="{Binding RefreshCommand}">
        <ScrollView>
            <VerticalStackLayout Padding="15" Spacing="20">

                <!-- Welcome Header -->
                <VerticalStackLayout Spacing="5">
                    <Label Text="{Binding CurrentUser.DisplayName, StringFormat='Hello, {0}!'}"
                           FontSize="28"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}"/>
                    <Label Text="{Binding CurrentUser.ShopName}"
                           FontSize="14"
                           TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}"
                           IsVisible="{Binding CurrentUser.ShopName, Converter={StaticResource StringToBoolConverter}}"/>
                </VerticalStackLayout>

                <!-- Scan QR Button -->
                <Frame Padding="30"
                       BackgroundColor="{StaticResource Primary}"
                       BorderColor="Transparent"
                       CornerRadius="16"
                       HasShadow="True">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding ScanQRCodeCommand}"/>
                    </Frame.GestureRecognizers>
                    <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                        <Label Text="ðŸ“·"
                               FontSize="50"
                               HorizontalOptions="Center"/>
                        <Label Text="Scan Client QR Code"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="White"
                               HorizontalOptions="Center"/>
                        <Label Text="View a client's haircut profile"
                               FontSize="14"
                               TextColor="#FFFFFFCC"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Manual Code Entry -->
                <Button Text="Or Enter Code Manually"
                        Command="{Binding EnterCodeManuallyCommand}"
                        Style="{StaticResource SecondaryButton}"
                        HorizontalOptions="Center"/>

                <!-- Recent Clients -->
                <VerticalStackLayout Spacing="15" IsVisible="{Binding HasRecentClients}">
                    <Label Text="Recent Clients"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}"/>

                    <CollectionView ItemsSource="{Binding RecentClients}"
                                  SelectionMode="None">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="models:RecentClient">
                                <Frame Padding="15"
                                       Margin="0,0,0,10"
                                       BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceLight}, Dark={StaticResource SurfaceDark}}"
                                       BorderColor="Transparent"
                                       CornerRadius="12">
                                    <Frame.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:BarberDashboardViewModel}}, Path=ViewRecentClientCommand}"
                                                            CommandParameter="{Binding .}"/>
                                    </Frame.GestureRecognizers>
                                    <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="15">
                                        <!-- Avatar -->
                                        <Frame Grid.Column="0"
                                               WidthRequest="50"
                                               HeightRequest="50"
                                               CornerRadius="25"
                                               Padding="0"
                                               BackgroundColor="{StaticResource Secondary}"
                                               VerticalOptions="Center">
                                            <Label Text="{Binding ClientName, Converter={StaticResource NameToInitialsConverter}}"
                                                   FontSize="18"
                                                   FontAttributes="Bold"
                                                   TextColor="White"
                                                   HorizontalOptions="Center"
                                                   VerticalOptions="Center"/>
                                        </Frame>

                                        <!-- Info -->
                                        <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Spacing="2">
                                            <Label Text="{Binding ClientName}"
                                                   FontSize="16"
                                                   FontAttributes="Bold"
                                                   TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}"/>
                                            <Label Text="{Binding ProfileName}"
                                                   FontSize="13"
                                                   TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}"/>
                                            <Label Text="{Binding ProfileSummary}"
                                                   FontSize="12"
                                                   TextColor="{AppThemeBinding Light={StaticResource Gray400}, Dark={StaticResource Gray500}}"/>
                                        </VerticalStackLayout>

                                        <!-- Time -->
                                        <Label Grid.Column="2"
                                               Text="{Binding ViewedAt, Converter={StaticResource DateToRelativeConverter}}"
                                               FontSize="11"
                                               TextColor="{AppThemeBinding Light={StaticResource Gray400}, Dark={StaticResource Gray500}}"
                                               VerticalOptions="Start"/>
                                    </Grid>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>

                <!-- No Recent Clients -->
                <Frame Padding="30"
                       BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceLight}, Dark={StaticResource SurfaceDark}}"
                       BorderColor="Transparent"
                       CornerRadius="12"
                       IsVisible="{Binding HasRecentClients, Converter={StaticResource InvertedBoolConverter}}">
                    <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                        <Label Text="ðŸ‘¥" FontSize="40" HorizontalOptions="Center"/>
                        <Label Text="No Recent Clients"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}"
                               HorizontalOptions="Center"/>
                        <Label Text="Scan a client's QR code to get started"
                               FontSize="14"
                               TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}"
                               HorizontalOptions="Center"
                               HorizontalTextAlignment="Center"/>
                    </VerticalStackLayout>
                </Frame>

            </VerticalStackLayout>
        </ScrollView>
    </RefreshView>
</ContentPage>
