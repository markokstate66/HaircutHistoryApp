<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:HaircutHistoryApp.ViewModels"
             x:Class="HaircutHistoryApp.Views.RegisterPage"
             x:DataType="vm:RegisterViewModel"
             Title="{Binding Title}"
             BackgroundColor="{StaticResource Background}">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="15">

            <!-- Header -->
            <Label Text="Create Account"
                   FontSize="24"
                   FontAttributes="Bold"
                   Margin="0,0,0,20"/>

            <!-- Display Name -->
            <VerticalStackLayout Spacing="5">
                <Label Text="Display Name" FontSize="14" TextColor="{StaticResource Gray600}"/>
                <Entry Placeholder="Your name"
                       Text="{Binding DisplayName}"
                       ReturnType="Next"
                       Style="{StaticResource EntryStyle}"/>
            </VerticalStackLayout>

            <!-- Email -->
            <VerticalStackLayout Spacing="5">
                <Label Text="Email" FontSize="14" TextColor="{StaticResource Gray600}"/>
                <Entry Placeholder="Enter your email"
                       Text="{Binding Email}"
                       Keyboard="Email"
                       ReturnType="Next"
                       Style="{StaticResource EntryStyle}"/>
            </VerticalStackLayout>

            <!-- Password -->
            <VerticalStackLayout Spacing="5">
                <Label Text="Password" FontSize="14" TextColor="{StaticResource Gray600}"/>
                <Entry Placeholder="Create a password (min 6 characters)"
                       Text="{Binding Password}"
                       IsPassword="True"
                       ReturnType="Next"
                       Style="{StaticResource EntryStyle}"/>
            </VerticalStackLayout>

            <!-- Confirm Password -->
            <VerticalStackLayout Spacing="5">
                <Label Text="Confirm Password" FontSize="14" TextColor="{StaticResource Gray600}"/>
                <Entry Placeholder="Confirm your password"
                       Text="{Binding ConfirmPassword}"
                       IsPassword="True"
                       ReturnType="Done"
                       Style="{StaticResource EntryStyle}"/>
            </VerticalStackLayout>

            <!-- Mode Selection -->
            <Frame Padding="15" Margin="0,10,0,0"
                   BackgroundColor="{StaticResource Surface}"
                   BorderColor="Transparent"
                   CornerRadius="10">
                <VerticalStackLayout Spacing="10">
                    <Label Text="I am a:" FontSize="16" FontAttributes="Bold"/>

                    <HorizontalStackLayout Spacing="10">
                        <Switch IsToggled="{Binding IsBarberMode}"
                                OnColor="{StaticResource Primary}"/>
                        <Label Text="{Binding IsBarberMode, Converter={StaticResource BoolToModeConverter}}"
                               VerticalOptions="Center"
                               FontSize="16"/>
                    </HorizontalStackLayout>

                    <!-- Shop Name (visible only for barbers) -->
                    <VerticalStackLayout Spacing="5" IsVisible="{Binding IsBarberMode}">
                        <Label Text="Shop/Salon Name (Optional)" FontSize="14" TextColor="{StaticResource Gray600}"/>
                        <Entry Placeholder="Enter your shop name"
                               Text="{Binding ShopName}"
                               Style="{StaticResource EntryStyle}"/>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <!-- Sign Up Button -->
            <Button Text="Create Account"
                    Command="{Binding SignUpCommand}"
                    IsEnabled="{Binding IsNotBusy}"
                    Style="{StaticResource PrimaryButton}"
                    Margin="0,20,0,0"/>

            <!-- Loading -->
            <ActivityIndicator IsRunning="{Binding IsBusy}"
                             IsVisible="{Binding IsBusy}"
                             Color="{StaticResource Primary}"/>

            <!-- Back to Login -->
            <Label Text="Already have an account? Sign In"
                   TextColor="{StaticResource Primary}"
                   HorizontalOptions="Center"
                   Margin="0,10,0,0">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding GoBackCommand}"/>
                </Label.GestureRecognizers>
            </Label>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
