<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:HaircutHistoryApp.ViewModels"
             xmlns:models="clr-namespace:HaircutHistoryApp.Models"
             x:Class="HaircutHistoryApp.Views.HaircutListPage"
             x:DataType="vm:HaircutListViewModel"
             Title="{Binding Title}"
             BackgroundColor="{AppThemeBinding Light={StaticResource BackgroundLight}, Dark={StaticResource BackgroundDark}}">

    <Grid RowDefinitions="*,Auto">
        <!-- Haircut List -->
        <RefreshView Grid.Row="0"
                     IsRefreshing="{Binding IsRefreshing}"
                     Command="{Binding RefreshCommand}">
            <CollectionView ItemsSource="{Binding Haircuts}"
                            SelectionMode="None">
                <CollectionView.EmptyView>
                    <VerticalStackLayout VerticalOptions="Center"
                                         HorizontalOptions="Center"
                                         Padding="20">
                        <Label Text="No haircuts yet"
                               FontSize="18"
                               TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}"
                               HorizontalOptions="Center"/>
                        <Label Text="Tap the + button to add your first haircut"
                               FontSize="14"
                               TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}"
                               HorizontalOptions="Center"
                               Margin="0,10,0,0"/>
                    </VerticalStackLayout>
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:HaircutRecord">
                        <SwipeView>
                            <SwipeView.RightItems>
                                <SwipeItems>
                                    <SwipeItem Text="Delete"
                                               BackgroundColor="{StaticResource Danger}"
                                               Command="{Binding Source={RelativeSource AncestorType={x:Type vm:HaircutListViewModel}}, Path=DeleteHaircutCommand}"
                                               CommandParameter="{Binding .}"/>
                                </SwipeItems>
                            </SwipeView.RightItems>

                            <Frame Margin="10,5"
                                   Padding="15"
                                   BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceLight}, Dark={StaticResource SurfaceDark}}"
                                   BorderColor="Transparent"
                                   CornerRadius="12">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:HaircutListViewModel}}, Path=ViewHaircutCommand}"
                                                          CommandParameter="{Binding .}"/>
                                </Frame.GestureRecognizers>

                                <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,Auto,Auto">
                                    <!-- Date Badge -->
                                    <Frame Grid.RowSpan="3"
                                           WidthRequest="50"
                                           HeightRequest="50"
                                           CornerRadius="10"
                                           Padding="0"
                                           BackgroundColor="{StaticResource Primary}"
                                           VerticalOptions="Center">
                                        <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
                                            <Label Text="{Binding Date, StringFormat='{0:dd}'}"
                                                   FontSize="18"
                                                   FontAttributes="Bold"
                                                   TextColor="White"
                                                   HorizontalOptions="Center"/>
                                            <Label Text="{Binding Date, StringFormat='{0:MMM}'}"
                                                   FontSize="10"
                                                   TextColor="White"
                                                   HorizontalOptions="Center"/>
                                        </VerticalStackLayout>
                                    </Frame>

                                    <!-- Description -->
                                    <Label Grid.Column="1"
                                           Text="{Binding Description, TargetNullValue='Haircut'}"
                                           FontSize="16"
                                           FontAttributes="Bold"
                                           TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}"
                                           Margin="15,0,0,0"/>

                                    <!-- Stylist -->
                                    <Label Grid.Row="1" Grid.Column="1"
                                           Text="{Binding StylistName, TargetNullValue='', StringFormat='by {0}'}"
                                           FontSize="12"
                                           TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}"
                                           Margin="15,2,0,0"
                                           IsVisible="{Binding StylistName, Converter={StaticResource StringToBoolConverter}}"/>

                                    <!-- Location -->
                                    <Label Grid.Row="2" Grid.Column="1"
                                           Text="{Binding Location}"
                                           FontSize="12"
                                           TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}"
                                           Margin="15,2,0,0"
                                           IsVisible="{Binding Location, Converter={StaticResource StringToBoolConverter}}"/>

                                    <!-- Price & Duration -->
                                    <VerticalStackLayout Grid.Column="2" Grid.RowSpan="3"
                                                         VerticalOptions="Center"
                                                         Spacing="2">
                                        <Label Text="{Binding PriceDisplay}"
                                               FontSize="14"
                                               FontAttributes="Bold"
                                               TextColor="{StaticResource Secondary}"
                                               HorizontalOptions="End"
                                               IsVisible="{Binding Price, Converter={StaticResource NullToBoolConverter}}"/>
                                        <Label Text="{Binding DurationDisplay}"
                                               FontSize="11"
                                               TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}"
                                               HorizontalOptions="End"
                                               IsVisible="{Binding DurationMinutes, Converter={StaticResource NullToBoolConverter}}"/>
                                        <!-- Chevron when no price or duration -->
                                        <Label Text=">"
                                               FontSize="16"
                                               TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}"
                                               IsVisible="{Binding Price, Converter={StaticResource InvertedNullToBoolConverter}}"/>
                                    </VerticalStackLayout>
                                </Grid>
                            </Frame>
                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>

        <!-- Add Button -->
        <Button Grid.Row="1"
                Text="+ Add Haircut"
                Command="{Binding AddHaircutCommand}"
                Style="{StaticResource PrimaryButton}"
                Margin="15"/>

        <!-- Loading -->
        <ActivityIndicator Grid.RowSpan="2"
                           IsRunning="{Binding IsBusy}"
                           IsVisible="{Binding IsBusy}"
                           Color="{StaticResource Primary}"
                           VerticalOptions="Center"
                           HorizontalOptions="Center"/>
    </Grid>
</ContentPage>
