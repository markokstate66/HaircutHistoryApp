<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:HaircutHistoryApp.ViewModels"
             x:Class="HaircutHistoryApp.Views.SettingsPage"
             x:DataType="vm:SettingsViewModel"
             Title="{Binding Title}"
             BackgroundColor="{AppThemeBinding Light={StaticResource BackgroundLight}, Dark={StaticResource BackgroundDark}}">

    <ScrollView>
        <VerticalStackLayout Padding="15" Spacing="20">

            <!-- Account Section -->
            <Frame Padding="15"
                   BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceLight}, Dark={StaticResource SurfaceDark}}"
                   BorderColor="Transparent"
                   CornerRadius="12">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Account"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}"/>

                    <!-- Profile Info -->
                    <HorizontalStackLayout Spacing="15">
                        <!-- Profile Picture with tap to change -->
                        <Grid WidthRequest="70" HeightRequest="70">
                            <!-- Profile Picture or Initials -->
                            <Frame WidthRequest="70"
                                   HeightRequest="70"
                                   CornerRadius="35"
                                   Padding="0"
                                   IsClippedToBounds="True"
                                   BackgroundColor="{StaticResource Primary}">
                                <Grid>
                                    <!-- Initials (shown when no picture) -->
                                    <Label Text="{Binding DisplayName, Converter={StaticResource NameToInitialsConverter}}"
                                           FontSize="24"
                                           FontAttributes="Bold"
                                           TextColor="White"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"
                                           IsVisible="{Binding HasNoProfilePicture}"/>
                                    <!-- Profile Picture -->
                                    <Image Source="{Binding ProfilePictureUrl}"
                                           Aspect="AspectFill"
                                           IsVisible="{Binding HasProfilePicture}"/>
                                </Grid>
                            </Frame>

                            <!-- Edit Badge (only for email auth users) -->
                            <Frame WidthRequest="24"
                                   HeightRequest="24"
                                   CornerRadius="12"
                                   Padding="0"
                                   BackgroundColor="{StaticResource Secondary}"
                                   HorizontalOptions="End"
                                   VerticalOptions="End"
                                   IsVisible="{Binding CanUploadProfilePicture}">
                                <Label Text="+"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="White"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Frame>

                            <!-- Tap Gesture -->
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding ChangeProfilePictureCommand}"/>
                            </Grid.GestureRecognizers>
                        </Grid>

                        <VerticalStackLayout VerticalOptions="Center" Spacing="2">
                            <Label Text="{Binding DisplayName}"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}"/>
                            <Label Text="{Binding Email}"
                                   FontSize="14"
                                   TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}"/>
                            <Label Text="{Binding AuthProviderDisplay}"
                                   FontSize="11"
                                   TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}"/>
                        </VerticalStackLayout>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <!-- Appearance Section -->
            <Frame Padding="15"
                   BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceLight}, Dark={StaticResource SurfaceDark}}"
                   BorderColor="Transparent"
                   CornerRadius="12">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Appearance"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}"/>

                    <Grid ColumnDefinitions="*,Auto">
                        <VerticalStackLayout Grid.Column="0">
                            <Label Text="Theme"
                                   FontSize="16"
                                   TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}"/>
                            <Label Text="Choose how the app looks"
                                   FontSize="12"
                                   TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}"/>
                        </VerticalStackLayout>
                        <Picker Grid.Column="1"
                                ItemsSource="{Binding ThemeOptions}"
                                SelectedIndex="{Binding SelectedThemeIndex}"
                                WidthRequest="140"
                                VerticalOptions="Center"
                                TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}"/>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- Mode Section -->
            <Frame Padding="15"
                   BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceLight}, Dark={StaticResource SurfaceDark}}"
                   BorderColor="Transparent"
                   CornerRadius="12">
                <VerticalStackLayout Spacing="15">
                    <Label Text="App Mode"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}"/>

                    <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto">
                        <VerticalStackLayout Grid.Column="0">
                            <Label Text="Barber/Stylist Mode"
                                   FontSize="16"
                                   TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}"/>
                            <Label Text="Switch to view and add notes to client profiles"
                                   FontSize="12"
                                   TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}"/>
                        </VerticalStackLayout>
                        <Switch Grid.Column="1"
                                IsToggled="{Binding IsBarberMode}"
                                OnColor="{StaticResource Primary}"
                                VerticalOptions="Center"/>

                        <!-- Shop Name (for barbers) -->
                        <Frame Grid.Row="1" Grid.ColumnSpan="2"
                               Padding="10"
                               Margin="0,10,0,0"
                               BackgroundColor="{AppThemeBinding Light={StaticResource BackgroundLight}, Dark={StaticResource BackgroundDark}}"
                               BorderColor="Transparent"
                               CornerRadius="8"
                               IsVisible="{Binding IsBarberMode}">
                            <Grid ColumnDefinitions="*,Auto">
                                <VerticalStackLayout>
                                    <Label Text="Shop Name" FontSize="12" TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}"/>
                                    <Label Text="{Binding ShopName, TargetNullValue='Not set'}"
                                           FontSize="14"
                                           TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}"/>
                                </VerticalStackLayout>
                                <Button Grid.Column="1"
                                        Text="Edit"
                                        Command="{Binding UpdateShopNameCommand}"
                                        Style="{StaticResource SecondaryButton}"
                                        HeightRequest="35"
                                        FontSize="12"/>
                            </Grid>
                        </Frame>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- Achievements Section -->
            <Frame Padding="15"
                   BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceLight}, Dark={StaticResource SurfaceDark}}"
                   BorderColor="Transparent"
                   CornerRadius="12">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Achievements"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}"/>

                    <Frame Padding="15"
                           BackgroundColor="{AppThemeBinding Light={StaticResource BackgroundLight}, Dark={StaticResource BackgroundDark}}"
                           BorderColor="Transparent"
                           CornerRadius="10">
                        <Grid ColumnDefinitions="Auto,*,Auto">
                            <Frame WidthRequest="45"
                                   HeightRequest="45"
                                   CornerRadius="22"
                                   Padding="0"
                                   BackgroundColor="{StaticResource Secondary}">
                                <Label Text="T"
                                       FontSize="22"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"
                                       TextColor="White"/>
                            </Frame>
                            <VerticalStackLayout Grid.Column="1" Margin="15,0,0,0" VerticalOptions="Center">
                                <Label Text="Your Progress"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}"/>
                                <Label Text="Track your haircut milestones"
                                       FontSize="12"
                                       TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}"/>
                            </VerticalStackLayout>
                            <Button Grid.Column="2"
                                    Text="View"
                                    Command="{Binding ViewAchievementsCommand}"
                                    Style="{StaticResource SecondaryButton}"
                                    HeightRequest="35"
                                    FontSize="12"
                                    VerticalOptions="Center"/>
                        </Grid>
                    </Frame>
                </VerticalStackLayout>
            </Frame>

            <!-- App Info -->
            <Frame Padding="15"
                   BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceLight}, Dark={StaticResource SurfaceDark}}"
                   BorderColor="Transparent"
                   CornerRadius="12">
                <VerticalStackLayout Spacing="10">
                    <Label Text="About"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}"/>

                    <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto">
                        <Label Text="Version" Grid.Row="0" TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}"/>
                        <Label Text="1.0.0" Grid.Row="0" Grid.Column="1" TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}"/>

                        <Label Text="Build" Grid.Row="1" TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}"/>
                        <Label Text="1" Grid.Row="1" Grid.Column="1" TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}"/>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- Sign Out -->
            <Button Text="Sign Out"
                    Command="{Binding SignOutCommand}"
                    Style="{StaticResource DangerButton}"
                    Margin="0,20,0,0"/>

            <!-- Loading -->
            <ActivityIndicator IsRunning="{Binding IsBusy}"
                             IsVisible="{Binding IsBusy}"
                             Color="{StaticResource Primary}"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
