<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:HaircutHistoryApp.ViewModels"
             x:Class="HaircutHistoryApp.Views.SettingsPage"
             x:DataType="vm:SettingsViewModel"
             Title="{Binding Title}"
             BackgroundColor="{AppThemeBinding Light={StaticResource BackgroundLight}, Dark={StaticResource BackgroundDark}}">

    <ScrollView>
        <VerticalStackLayout Padding="15" Spacing="20">

            <!-- Account Section -->
            <Frame Padding="15"
                   BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceLight}, Dark={StaticResource SurfaceDark}}"
                   BorderColor="Transparent"
                   CornerRadius="12">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Account"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}"/>

                    <!-- Profile Info -->
                    <HorizontalStackLayout Spacing="15">
                        <!-- Profile Picture with tap to change -->
                        <Grid WidthRequest="70" HeightRequest="70">
                            <!-- Profile Picture or Initials -->
                            <Frame WidthRequest="70"
                                   HeightRequest="70"
                                   CornerRadius="35"
                                   Padding="0"
                                   IsClippedToBounds="True"
                                   BackgroundColor="{StaticResource Primary}">
                                <Grid>
                                    <!-- Initials (shown when no picture) -->
                                    <Label Text="{Binding DisplayName, Converter={StaticResource NameToInitialsConverter}}"
                                           FontSize="24"
                                           FontAttributes="Bold"
                                           TextColor="White"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"
                                           IsVisible="{Binding HasNoProfilePicture}"/>
                                    <!-- Profile Picture -->
                                    <Image Source="{Binding ProfilePictureUrl}"
                                           Aspect="AspectFill"
                                           IsVisible="{Binding HasProfilePicture}"/>
                                </Grid>
                            </Frame>

                            <!-- Edit Badge (only for email auth users) -->
                            <Frame WidthRequest="24"
                                   HeightRequest="24"
                                   CornerRadius="12"
                                   Padding="0"
                                   BackgroundColor="{StaticResource Secondary}"
                                   HorizontalOptions="End"
                                   VerticalOptions="End"
                                   IsVisible="{Binding CanUploadProfilePicture}">
                                <Label Text="+"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="White"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Frame>

                            <!-- Tap Gesture -->
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding ChangeProfilePictureCommand}"/>
                            </Grid.GestureRecognizers>
                        </Grid>

                        <VerticalStackLayout VerticalOptions="Center" Spacing="2">
                            <Label Text="{Binding DisplayName}"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}"/>
                            <Label Text="{Binding Email}"
                                   FontSize="14"
                                   TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}"/>
                            <Label Text="{Binding AuthProviderDisplay}"
                                   FontSize="11"
                                   TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}"/>
                        </VerticalStackLayout>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <!-- Appearance Section -->
            <Frame Padding="15"
                   BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceLight}, Dark={StaticResource SurfaceDark}}"
                   BorderColor="Transparent"
                   CornerRadius="12">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Appearance"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}"/>

                    <Grid ColumnDefinitions="*,Auto">
                        <VerticalStackLayout Grid.Column="0">
                            <Label Text="Theme"
                                   FontSize="16"
                                   TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}"/>
                            <Label Text="Customize app colors and style"
                                   FontSize="12"
                                   TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}"/>
                        </VerticalStackLayout>
                        <Button Grid.Column="1"
                                Text="Customize"
                                Command="{Binding GoToThemesCommand}"
                                Style="{StaticResource SecondaryButton}"
                                HeightRequest="35"
                                FontSize="12"
                                VerticalOptions="Center"/>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- Support Section -->
            <Frame Padding="15"
                   BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceLight}, Dark={StaticResource SurfaceDark}}"
                   BorderColor="Transparent"
                   CornerRadius="12">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Support"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}"/>

                    <!-- Rate App -->
                    <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto">
                        <Label Text="*"
                               FontSize="20"
                               VerticalOptions="Center"
                               TextColor="{StaticResource Secondary}"/>
                        <VerticalStackLayout Grid.Column="1" Margin="10,0">
                            <Label Text="Rate Us"
                                   FontSize="16"
                                   TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}"/>
                            <Label Text="Love the app? Leave a review!"
                                   FontSize="12"
                                   TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}"/>
                        </VerticalStackLayout>
                        <Button Grid.Column="2"
                                Text="Rate"
                                Command="{Binding RateAppCommand}"
                                Style="{StaticResource SecondaryButton}"
                                HeightRequest="35"
                                FontSize="12"
                                VerticalOptions="Center"/>
                    </Grid>

                    <BoxView HeightRequest="1" Color="{AppThemeBinding Light=#E0E0E0, Dark=#404040}"/>

                    <!-- Share App -->
                    <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto">
                        <Label Text="&lt;"
                               FontSize="20"
                               VerticalOptions="Center"
                               TextColor="{StaticResource Secondary}"/>
                        <VerticalStackLayout Grid.Column="1" Margin="10,0">
                            <Label Text="Share"
                                   FontSize="16"
                                   TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}"/>
                            <Label Text="Share with friends and family"
                                   FontSize="12"
                                   TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}"/>
                        </VerticalStackLayout>
                        <Button Grid.Column="2"
                                Text="Share"
                                Command="{Binding ShareAppCommand}"
                                Style="{StaticResource SecondaryButton}"
                                HeightRequest="35"
                                FontSize="12"
                                VerticalOptions="Center"/>
                    </Grid>

                    <BoxView HeightRequest="1" Color="{AppThemeBinding Light=#E0E0E0, Dark=#404040}"/>

                    <!-- Contact Support -->
                    <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto">
                        <Label Text="?"
                               FontSize="20"
                               VerticalOptions="Center"
                               TextColor="{StaticResource Secondary}"/>
                        <VerticalStackLayout Grid.Column="1" Margin="10,0">
                            <Label Text="Contact Support"
                                   FontSize="16"
                                   TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}"/>
                            <Label Text="Need help? Reach out to us"
                                   FontSize="12"
                                   TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}"/>
                        </VerticalStackLayout>
                        <Button Grid.Column="2"
                                Text="Email"
                                Command="{Binding ContactSupportCommand}"
                                Style="{StaticResource SecondaryButton}"
                                HeightRequest="35"
                                FontSize="12"
                                VerticalOptions="Center"/>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- About Section -->
            <Frame Padding="15"
                   BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceLight}, Dark={StaticResource SurfaceDark}}"
                   BorderColor="Transparent"
                   CornerRadius="12">
                <VerticalStackLayout Spacing="15">
                    <Label Text="About"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}"/>

                    <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto" RowSpacing="10">
                        <Label Text="Version" Grid.Row="0"
                               TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}"/>
                        <Label Text="1.0.0" Grid.Row="0" Grid.Column="1"
                               TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}"/>

                        <Label Text="Build" Grid.Row="1"
                               TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}"/>
                        <Label Text="1" Grid.Row="1" Grid.Column="1"
                               TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}"/>
                    </Grid>

                    <BoxView HeightRequest="1" Color="{AppThemeBinding Light=#E0E0E0, Dark=#404040}"/>

                    <!-- Legal Links -->
                    <HorizontalStackLayout Spacing="20" HorizontalOptions="Center">
                        <Label Text="Privacy Policy"
                               FontSize="14"
                               TextColor="{StaticResource Primary}"
                               TextDecorations="Underline">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding OpenPrivacyPolicyCommand}"/>
                            </Label.GestureRecognizers>
                        </Label>
                        <Label Text="Terms of Service"
                               FontSize="14"
                               TextColor="{StaticResource Primary}"
                               TextDecorations="Underline">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding OpenTermsOfServiceCommand}"/>
                            </Label.GestureRecognizers>
                        </Label>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <!-- Offline Mode Banner -->
            <Frame Padding="15"
                   BackgroundColor="{StaticResource Warning}"
                   BorderColor="Transparent"
                   CornerRadius="12"
                   IsVisible="{Binding IsOfflineMode}">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Local Mode"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="White"/>
                    <Label Text="Your data is only stored on this device. Sign in to sync across devices and access all features."
                           FontSize="12"
                           TextColor="White"/>
                    <Button Text="Sign In to Sync"
                            Command="{Binding SignInCommand}"
                            BackgroundColor="White"
                            TextColor="{StaticResource Warning}"
                            CornerRadius="8"
                            HeightRequest="40"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Sign Out (only for signed-in users) -->
            <Button Text="Sign Out"
                    Command="{Binding SignOutCommand}"
                    Style="{StaticResource DangerButton}"
                    IsVisible="{Binding IsOfflineMode, Converter={StaticResource InvertedBoolConverter}}"
                    Margin="0,10,0,0"/>

            <!-- Loading -->
            <ActivityIndicator IsRunning="{Binding IsBusy}"
                             IsVisible="{Binding IsBusy}"
                             Color="{StaticResource Primary}"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
