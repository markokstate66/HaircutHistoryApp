<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- App Theme Colors -->
    <Color x:Key="Primary">#6366F1</Color>
    <Color x:Key="PrimaryDark">#4F46E5</Color>
    <Color x:Key="PrimaryLight">#A5B4FC</Color>
    <Color x:Key="Secondary">#8B5CF6</Color>
    <Color x:Key="SecondaryDark">#7C3AED</Color>
    <Color x:Key="Tertiary">#06B6D4</Color>

    <!-- Semantic Colors -->
    <Color x:Key="Success">#10B981</Color>
    <Color x:Key="Warning">#F59E0B</Color>
    <Color x:Key="Danger">#EF4444</Color>
    <Color x:Key="Info">#3B82F6</Color>

    <!-- Light Theme Background Colors -->
    <Color x:Key="BackgroundLight">#F8FAFC</Color>
    <Color x:Key="SurfaceLight">#FFFFFF</Color>
    <Color x:Key="SurfaceVariantLight">#F1F5F9</Color>

    <!-- Dark Theme Background Colors -->
    <Color x:Key="BackgroundDark">#0F172A</Color>
    <Color x:Key="SurfaceDark">#1E293B</Color>
    <Color x:Key="SurfaceVariantDark">#334155</Color>

    <!-- Theme-Aware Colors (for backward compatibility) -->
    <Color x:Key="Background">#F8FAFC</Color>
    <Color x:Key="Surface">#FFFFFF</Color>
    <Color x:Key="SurfaceVariant">#F1F5F9</Color>

    <!-- Text Colors Light -->
    <Color x:Key="TextPrimaryLight">#1E293B</Color>
    <Color x:Key="TextSecondaryLight">#64748B</Color>

    <!-- Text Colors Dark -->
    <Color x:Key="TextPrimaryDark">#F1F5F9</Color>
    <Color x:Key="TextSecondaryDark">#94A3B8</Color>

    <!-- Legacy Text Colors -->
    <Color x:Key="TextPrimary">#1E293B</Color>
    <Color x:Key="TextSecondary">#64748B</Color>
    <Color x:Key="PrimaryDarkText">#FFFFFF</Color>
    <Color x:Key="SecondaryDarkText">#E2E8F0</Color>

    <!-- Basic Colors -->
    <Color x:Key="White">#FFFFFF</Color>
    <Color x:Key="Black">#000000</Color>
    <Color x:Key="OffBlack">#121212</Color>

    <!-- Gray Scale -->
    <Color x:Key="Gray100">#F1F5F9</Color>
    <Color x:Key="Gray200">#E2E8F0</Color>
    <Color x:Key="Gray300">#CBD5E1</Color>
    <Color x:Key="Gray400">#94A3B8</Color>
    <Color x:Key="Gray500">#64748B</Color>
    <Color x:Key="Gray600">#475569</Color>
    <Color x:Key="Gray700">#334155</Color>
    <Color x:Key="Gray800">#1E293B</Color>
    <Color x:Key="Gray900">#0F172A</Color>
    <Color x:Key="Gray950">#020617</Color>

    <!-- Additional Colors for Styles.xaml compatibility -->
    <Color x:Key="Magenta">#D946EF</Color>
    <Color x:Key="MidnightBlue">#1E293B</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}"/>
    <SolidColorBrush x:Key="TertiaryBrush" Color="{StaticResource Tertiary}"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}"/>
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource Black}"/>

    <SolidColorBrush x:Key="Gray100Brush" Color="{StaticResource Gray100}"/>
    <SolidColorBrush x:Key="Gray200Brush" Color="{StaticResource Gray200}"/>
    <SolidColorBrush x:Key="Gray300Brush" Color="{StaticResource Gray300}"/>
    <SolidColorBrush x:Key="Gray400Brush" Color="{StaticResource Gray400}"/>
    <SolidColorBrush x:Key="Gray500Brush" Color="{StaticResource Gray500}"/>
    <SolidColorBrush x:Key="Gray600Brush" Color="{StaticResource Gray600}"/>
    <SolidColorBrush x:Key="Gray700Brush" Color="{StaticResource Gray700}"/>
    <SolidColorBrush x:Key="Gray800Brush" Color="{StaticResource Gray800}"/>
    <SolidColorBrush x:Key="Gray900Brush" Color="{StaticResource Gray900}"/>
</ResourceDictionary>