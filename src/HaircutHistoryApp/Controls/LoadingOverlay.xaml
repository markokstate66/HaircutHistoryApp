<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HaircutHistoryApp.Controls.LoadingOverlay"
             x:Name="this">

    <Grid IsVisible="{Binding IsLoading, Source={x:Reference this}}"
          BackgroundColor="{AppThemeBinding Light=#80FFFFFF, Dark=#80000000}"
          InputTransparent="False">

        <Frame BackgroundColor="{AppThemeBinding Light=White, Dark=#1E293B}"
               BorderColor="Transparent"
               CornerRadius="16"
               Padding="30"
               WidthRequest="200"
               HeightRequest="150"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               HasShadow="True">
            <VerticalStackLayout Spacing="15" VerticalOptions="Center">
                <ActivityIndicator IsRunning="True"
                                 Color="{StaticResource Primary}"
                                 WidthRequest="40"
                                 HeightRequest="40"
                                 HorizontalOptions="Center"/>
                <Label Text="{Binding LoadingText, Source={x:Reference this}}"
                       FontSize="14"
                       TextColor="{AppThemeBinding Light=#64748B, Dark=#94A3B8}"
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center"/>
            </VerticalStackLayout>
        </Frame>
    </Grid>
</ContentView>
